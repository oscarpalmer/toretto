{
	"$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
	"files": {
		"includes": [
			"./src/**/*",
			"./test/**/*"
		]
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"bracketSpacing": false,
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}